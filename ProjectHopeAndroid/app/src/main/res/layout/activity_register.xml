<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2980B9"
    android:layout_height="match_parent"
    tools:context="com.example.luke.projecthopeandroid.RegisterActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="30dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        android:textStyle="bold" />



    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:background="@drawable/custom_edttext"
        android:hint="Please enter name here"
        android:layout_marginBottom="15dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/surnameEdit"
        android:background="@drawable/custom_edttext"
        android:hint="Please enter surname here"
        android:layout_marginBottom="15dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/nameEdit"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Please enter Email here"
        android:background="@drawable/custom_edttext"
        android:id="@+id/emailEdit"
        android:layout_marginBottom="15dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/surnameEdit"
        android:layout_alignStart="@+id/nameEdit" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Please enter Password here"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_edttext"
        android:id="@+id/passwordEdit"
        android:inputType="textPassword"
        android:layout_below="@+id/emailEdit"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/cellEdit"
        android:layout_marginBottom="15dp"
        android:maxLength="10"
        android:background="@drawable/custom_edttext"
        android:hint="Please enter Cell here"
        android:inputType="phone"
        android:layout_below="@+id/passwordEdit"
        android:layout_alignStart="@+id/passwordEdit" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="register"
        android:text="Register"
        android:background="@drawable/custom_edttext"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/cellEdit"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
